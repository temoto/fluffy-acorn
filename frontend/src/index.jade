doctype
html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width")
    title #{title}
    link(rel="stylesheet" href="/index.css")
    link(rel="preload" href="/common/fluffy-acorn-x64.png" as="image")
    link(rel="preload" href="/index.js" as="script")
    link(rel="icon" href="/common/fluffy-acorn-x64.png")
    style #msg-invalid-browser{display:none}
  body
    div#msg-invalid-browser.big-fat-warning
      p Sorry, this page doesn't run well in your browser.
    <!--[if lt IE 10]>
    style #msg-invalid-browser{display:block}
    <![endif]-->
    noscript
      style #msg-invalid-browser{display:block}
    header
      div.col
        h1: a(href="/"): img(src="/common/fluffy-acorn-x64.png" alt="#{title}")
      div#app-state.app-state-paused.col
        button#btn-pause loading

    div#assets
      h2 Assets
      table
        thead
          tr
            th Currency
            th Total
            th Remain
            th Created
            th Actions
        tbody#assets-list

    div#current-ads
      h2 Current ads
      table
        thead
          tr
            th Status
            th Info
            th Price
            th Equation
            th Created
            th Actions
        tbody#current-ads-list

    div#recent-messages-cont

    footer
      p #{title} version: #[span.text-value #{version}] frontend compiled at: #[span.text-value #{new Date().toISOString()}] env: #[span.text-value #{environment}]

    script(src="/zepto.min.js")
    script(src="/mousetrap.min.js")
    script window.acorn=window.acorn||{}
    script(src="/index.js")
